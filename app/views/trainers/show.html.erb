<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<% if @table %>
    <table class="table">
        <tbody>
            <tr><td><h5>Pokemons</h5></td></tr>
                <%if @table[0]%>
                    <% @table.each do |poke| %>
                        <td>
                        <p><%= poke.name %></p>
                        <p><%= image_tag("pokemon/#{poke.ndex}.png", alt: "pokemon") %></p>
                        <p>Level <%= poke.level %></p>
                        <p>Health <%= poke.health %></p>
                        <div><%= button_to "Damage!", damage_path(id: poke), :class => "button medium", :method => :patch %></div></td>
                    <%end%>
                <% else %>
                    <tr><td>None</td></tr>
                <%end%>
                <%if @trainer == current_trainer %>
                    <tr><td><div><%= button_to "Create!", new_path(id: @pokemon), :class => "button medium", :method => :get %></div></td></tr>
                <%end%>
                <td></td>
        </tbody>
      </table>
<% end %>
